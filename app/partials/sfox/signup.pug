.sfox-signup.pb-50
  .signup-steps.border-bottom-light
    .flex-row.height-100.pt-70.pb-40.pl-40.pr-40
      .flex-row.flex-column-tablet.center-mobile.width-100-tablet.width-100.width-100-mobile
        .width-40.hidden-xs
          .width-80.flex-column
            span.f-20.em-500(translate="Complete the following steps to start trading bitcoin!")
            span.mid-grey.f-16.em-300.mt-10(translate="You will only have to do this once.")
        exchange-signup-steps.width-60.flex-row.flex-between-mobile.center(ng-class="inMobileBuy ? 'flex-column-mobile' : 'flex-baseline'" exchange="vm.exchange")
      .close-modal
        i.ti-close.pointer(ng-click="vm.onStep('pending') ? $dismiss() : vm.close()")
  div.pl-40.pr-40.pt-40.pb-25
    div(ng-if="vm.onStep('create')" ng-controller="SfoxCreateAccountController")
      exchange-create(views="views" exchange="exchange" on-create="handleCreate()" terms-of-service="https://www.sfox.com/terms.html" privacy-agreement="https://www.sfox.com/privacy.html" on-close="vm.onClose()")
    div(ng-if="vm.onStep('verify')" ng-controller="SfoxVerifyController")
      exchange-verify(steps="steps" fields="fields" exchange="exchange" next-step="'upload'" initial-step="initialStep" on-verify="verifyProfile()" on-set-profile="setProfile(fields)" name="SFOX" on-close="vm.onClose()")
    div(ng-if="vm.onStep('upload')" ng-controller="SfoxUploadController")
      exchange-upload(base="SFOX" locked="locked" id-type="state.idType" handle-upload="prepUpload(file)" auto-fill="autoFill()" upload-steps="uploadSteps" on-upload-step="onUploadStep" on-close="vm.onClose()")
    div(ng-if="vm.onStep('link')" ng-include="'partials/sfox/link.pug'" ng-controller="SfoxLinkController")
  contact-support-footer.abs(ng-hide="inMobileBuy")
  sift-science(ng-if='vm.siftScienceEnabled' user-id='vm.userId')
