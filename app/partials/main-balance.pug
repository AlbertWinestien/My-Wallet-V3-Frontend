.heavy.flex-column.flex-align-end.right-align.center-mobile.main-balance(ng-show="status.didUpgradeToHd")
  span.f-20(translate="{{ !activeAsset() ? 'BALANCES.TOTAL' : 'BALANCES.' + activeAsset() }}")
  .pointer(uib-dropdown)
    .flex-row.flex-center.f-20.em-200(uib-dropdown-toggle)
      include ./context-balance
    ul.dropdown-menu-right.pbn(uib-dropdown-menu)
      li.flex-row.flex-center.flex-end.f-20.em-200
        include ./context-balance
      li.flex-row.flex-between(ng-repeat="asset in assets" ui-sref="{{ 'wallet.common.' + asset.code }}" ng-if="activeAsset() !== asset.code")
        span {{ asset.total() | convert:asset.code:true }}
        fiat(btc="asset.code === 'btc' && assets.btc.total()" eth="asset.code === 'eth' && assets.eth.total()" bch="asset.code === 'bch' && assets.bch.total() / 1e8")
      li.flex-row.flex-between(ui-sref="wallet.common.home" ng-if="activeAsset()")
        span Total Balance
        fiat.mid-grey(btc="assets.btc.total()" eth="assets.eth.total()" bch="assets.bch.total() / 1e8")
.mvn.f-20.em-200.lh1(ng-show="balanceMessage" ng-class="{'security-red flex-end flex-center flex-justify-mobile': balanceMessage}")
  .fork-warn.mr-10.flex-center.flex-end
    span.f-10 {{ balanceMessage }}
  fiat(btc="btc.total()" eth="eth.total() > 0 ? getEthTotal() : null" bch="bch.total()")
